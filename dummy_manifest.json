{
    "manifest_version": 2,
    "name": "Link",
    "description": "Save and share images, links and text snippets across devices.",
    "version": "1.0.11",
    "icons": {
        "16": "images/colored_icon_16.png",
        "32": "images/colored_icon_32.png",
        "64": "images/colored_icon_64.png",
        "128": "images/colored_icon_128.png",
        "256": "images/colored_icon_256.png",
        "512": "images/colored_icon_512.png"
    },
    "browser_action": {
        "default_icon": "images/colored_icon_512.png",
        "default_popup": "extension.html"
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "identity",
        "activeTab",
        "tabs",
        "storage",
        "contextMenus",
        "<all_urls>"
    ],
    "oauth2": {
        "client_id": "CLIENT_ID_HERE",
        "scopes": [
            "https://www.googleapis.com/auth/userinfo.email",
            "https://www.googleapis.com/auth/userinfo.profile"
        ]
    },
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
    "key": "PUBLIC_KEY_HERE"
}
